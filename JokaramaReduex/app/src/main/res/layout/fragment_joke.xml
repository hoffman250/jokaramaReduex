<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/joke_name"
        android:gravity="left"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/joke_line_1"
        android:gravity="left"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/joke_name"/>

    <TextView
        android:id="@+id/joke_line_2"
        android:gravity="right"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/joke_line_1"/>

    <TextView
        android:id="@+id/joke_line_3"
        android:gravity="left"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/joke_line_2"/>

    <TextView
        android:id="@+id/joke_line_4"
        android:gravity="right"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/joke_line_3"/>

    <TextView
        android:id="@+id/joke_line_5"
        android:gravity="left"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/joke_line_4"/>

</RelativeLayout>